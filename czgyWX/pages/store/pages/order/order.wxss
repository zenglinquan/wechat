page {
  font-family: "微软雅黑";
}

/* tab滑块 */

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 60rpx;
  background-color: #fff;
  border-bottom: 6px solid rgb(245, 246, 247);
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 20%;
  color: #666;
}

.on {
  color: red;
  border-bottom: 5rpx solid red;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: #f9f7f7;
}

/* .swiper-box view {
  text-align: center;
} */

.item {
  width: 100%;
  margin-bottom: 80px;
  background-color: #f9f7f7;
}

.item_top {
  display: flex;
  flex-flow: row;
  border-bottom: 1px solid #e5e5e5;
  background-color: #fff;
}

.item_top .item_top_img {
  width: 6%;
  height: 22px;
  padding: 6px;
}

.item_top text {
  font-size: 12px;
  color: #666;
  display: block;
  padding: 4px;
  margin-top: 4px;
}

.middle {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  width: 100%;
  height: 116px;
  border-bottom: 1px solid #e5e5e5;
}

.middle .middle_img {
  float: left;
  width: 100px;
  height: 100px;
  margin: 8px;
}

.middle .middle_category text {
  display: inline-block;
  margin-top: 10px;
  font-size: 12px;
  color: #666;
}

.middle .middle_right {
  margin: 18px;
  padding-top: 20px;
  display: flex;
  flex-flow: column;
}

.middle .middle_price {
  font-size: 12px;
}

.middle .middle_amount {
  display: flex;
  justify-content: flex-end;
  font-size: 12px;
}

.bottom {
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
  display: flex;
  flex-flow: row;
  justify-content: flex-end;
  border-top: 1px solid #e5e5e5;
}

.bottom text {
  padding-top: 8px;
  padding-bottom: 8px;
  padding-left: 8px;
  font-size: 14px;
}

.bottom .bottom_red {
  padding-right: 8px;
  color: red;
}

.bottom_btn {
  display: block;
  background-color: #fff;
  padding-top: 10px;
  height: 35px;
  border-bottom: 1px solid #e5e5e5;
}

.bottom_btn .bottom_btn_cancel {
  width: 20%;
  height: 24px;
  border: 1px solid #666;
  border-radius: 2px;
  background-color: #fff;
  margin-right: 10px;
  float: right;
}

.bottom_btn .bottom_btn_cancel text {
  display: block;
  text-align: center;
  padding-top: 4px;
  color: #666;
  font-size: 12px;
}

.bottom_btn_pay {
  width: 20%;
  height: 24px;
  border-radius: 2px;
  background-color: rgb(230, 67, 64);
  margin-right: 10px;
  float: right;
  text-align: center;
  line-height: 24px;
  margin-top: 5px;
}

.bottom_btn_pay text {
  display: block;
  text-align: center;
  /* padding-top: 6px; */
  color: #fff;
  font-size: 12px;
}

.marginStyle {
  margin-bottom: 5px;
}

/* 商品详情 */

.pay_details {
  background-color: #fff;
  width: 100%;
  height: 100px;
  margin-top: 2px;
}

.pay_details .pay_details_img {
  float: left;
  width: 80px;
  height: 80px;
  margin: 10px;
}

.pay_details_category {
  display: flex;
  flex-flow: column;
  float: left;
  width: 40%;
}

.pay_details .pay_details_category_text1 {
  display: inline-block;
  padding-top: 12px;
  font-size: 12px;
}

.pay_details .pay_details_category_text2 {
  color: #999;
  font-size: 12px;
  margin-top: 10px;
}

.pay_details .pay_details_right {
  display: flex;
  flex-flow: column;
  float: right;
  margin: 10px;
  padding-top: 26px;
}

.pay_details .pay_details_price {
  color: red;
  font-size: 12px;
  width: 54px;
  text-align: center;
}

.pay_details .pay_details_amount {
  color: #8a8a8a;
  font-size: 12px;
  text-align: center;
}

.pay_details_category {
  display: flex;
  flex-flow: column;
  float: left;
  font-size: 12px;
  height: 100%;
  width: 40%;
}

.pay_details .pay_details_category_text1 {
  display: inline-block;
  padding-top: 12px;
  font-size: 14px;
}

.pay_details .pay_details_category_text2 {
  color: #999;
  font-size: 14px;
  margin-top: 30px;
}

.bottom-order-state {
  margin: 10px 0;
  font-size: 12px;
  padding: 0px 10px;
}

.bottom-order-send-state {
  height: 24px;
  background-color: #fff;
  /* margin: 10px 0px; */
  width: 60%;
  display: inline-block;
  text-align: center;
  line-height: 16px;
}

.bottom-order-send-state text {
  text-align: center;
  /* padding-top: 6px; */
  font-size: 12px;
}
