.block{padding:60rpx 20rpx;}
.block.center{text-align :center;}
.block.right{text-align :right;}
/*panel*/
.panel{margin :20rpx 0;}
.panel-hd,.panel-ft{display :flex;min-height :88rpx;justify-content :center;align-items :center;}
.panel-hd{border-bottom:1rpx solid #dcdcdc;padding :0 20rpx;}
