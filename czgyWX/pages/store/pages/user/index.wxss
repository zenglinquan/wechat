/*列表*/
.ul{margin-bottom :20rpx;}
.li{display :flex;padding:20rpx;align-items :center;border-bottom:1rpx solid #dcdcdc;min-height :88rpx;overflow :hidden;}
.li:last-child{border:0}
.li-bd{position :relative; }
.li-ft{flex:1;margin-right :40rpx;text-align: right}

/*单条*/
.entry{width :100%; margin-bottom: 20rpx; padding :0 28rpx; min-height :88rpx;display :flex;}
/*信息展示*/
