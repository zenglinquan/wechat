.section{ position: absolute; width: 100%; height: 100% ; overflow: hidden;}
.left{ position: absolute; left: 0; top: 0; height: 100%; width: 90px; background: #F6F6F6; text-align: center;font-size:13px;}
.left::before{ content: ""; position: absolute; background: #dcdcdc; right: 0; top: 0; height: 100%; border-right: 1px solid #dcdcdc;}
.left view.active{ background: #FFF; position: relative; z-index: 2;}
.left view{ display: block; height: 44px; line-height: 44px; border-bottom: 1px solid #dcdcdc;font-size: 14px}

.right{ margin-left: 90px; height: 100%; overflow: hidden; width: auto;background: #fff;}
.right text{ font-size: 13px}
.typeTree{ padding: 10px 20px;}
.typeTree .item{ width: 50%; text-align: center; display: inline-block; vertical-align: top;}
.typeTree .brand,
.typeTree .category{ display: flex; flex-wrap: wrap; overflow: hidden;}
.typeTree .title{ padding: 10px 0; display: block; color: #333;}
.typeTree image { width: 75px; margin: 0 auto;}
.typeTree .brand image{ height: 75px;}
.typeTree .category image{ height: 85px;}
.typeTree .category{ padding-bottom: 10px;}
.item text{ padding-bottom: 10px; display: block;word-break:break-all;  }

