page{
  font-family: "微软雅黑";
}
/* 轮播图样式 */
.swiper-item{
  display: block;
}
.slide-image {
  width: 100%;
}
swiper {
  height: 300px;
}
image{
  width: 750rpx;
  height: 100%;
}

/* 商品介绍样式 */
.goods_title {
  font-size: 14px;
  line-height: 20px;
  padding: 6px;
  height: 40px;
  position: relative;
  color: black;
}

.goods_infor_top {
  background-color: #FFF;
}

.goods_price {
  margin: 6px;
  font-size: 16px;
  color: #FF0000;
}

.goods_old_price {
  margin-left: 10px;
  font-size: 12px;
  text-decoration: line-through;
  color: #535353;
}

.goods_deliver {
  padding: 10px 14px 10px 14px;
  border-top: 1px solid #E5E5E5;
  font-size: 12px;
  color: #676767;
  display: flex;
  justify-content: space-between;
}


/* 选择商品属性的样式 */
.goods_detail {
  padding: 0 10px;
  margin-top: 10px;
  background-color: #FFF;
}
.goods_detail_title {
  padding: 10px 0;
  font-size: 12px;
  border-bottom: 1px solid #eee;
  color: #535353;
}
.mg{
  padding: 20rpx;
}
.bc_green{
  padding: 18rpx 24rpx;
	border: 1rpx solid #ddd;
	display: inline-block;
	line-height: 1;
	color: #666;
	font-size: 24rpx;
	border-radius: 5rpx;
	margin: 10rpx;
	white-space: nowrap;
}
.bc_red{
  background: #f7982a;
	color: #fff;
	border-color: #f7982a;
}





/* 购买数量的样式 */
.goods_amount{
  padding:10px 0 10px 0;
}


/*主容器*/
.stepper {
	width: 80px;
	height: 26px;
	/*给主容器设一个边框*/
	border: 1px solid #ccc;
	border-radius: 3px;
}
/*加号和减号*/
.stepper text {
	width: 19px;
	line-height: 26px;
	text-align: center;
	float: left;
}
/*数值*/
.stepper input {
	width: 40px;
	height: 26px;
	float: left;
	margin: 0 auto;
	text-align: center;
	font-size: 12px;
	/*给中间的input设置左右边框即可*/
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
  min-height:0;
}

/*普通样式*/
.stepper .normal{
	color: black;
}

/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}


/* 底部通栏 */

